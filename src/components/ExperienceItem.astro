---
import LinkButton from "./LinkButton.astro";

const { date, title, description, link } = Astro.props;
---

<div
  class="absolute w-3 h-3 mt-1.5 -start-1.5 border rounded-full
  border-blueribbon-600 bg-blueribbon-600 dark:border-turquoise-500 dark:bg-turquoise-500"
>
</div>
<h3 class="text-lg font-semibold text-blueribbon-600 dark:text-turquoise-500">
  {title}
</h3>
<p
  class="my-1 text-sm font-normal leading-none text-[#8e6200] dark:text-yellow-200"
>
  {date}
</p>
<p class="text-base text-pretty text-gray-800 dark:text-gray-300">
  {description}
</p>
{
  link && (
    <>
      <LinkButton href={link} class="mt-4">
        Saber m√°s
        <svg
          class="size-4 rtl:rotate-180"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="currentcolor"
          viewBox="0 0 14 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"
          />
        </svg>
      </LinkButton>
    </>
  )
}
