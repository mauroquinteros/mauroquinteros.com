---
import LinkButton from "./LinkButton.astro";

const { date, title, description, link } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-sky-200/80">{date}</time
>
<h3 class="mt-2 text-lg font-semibold text-yellow-200/90">
  {title}
</h3>
<p class="mb-4 text-base font-normal dark:text-gray-200 text-pretty">
  {description}
</p>
{
  link && (
    <>
      <LinkButton href={link}>
        Saber m√°s
        <svg
          class="w-3 h-3 ms-2 rtl:rotate-180"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"
          />
        </svg>
      </LinkButton>
    </>
  )
}
