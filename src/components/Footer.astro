---
import LinkedInIcon from "./icons/LinkedIn.astro";
import ContactIcon from "./icons/Contact.astro";

const currentYear = new Date().getFullYear();
---

<footer
  class="flex justify-center mt-10 sm:mt-16 mb-10 px-4 md:px-0 container mx-auto w-full lg:max-w-4xl md:max-w-2xl"
>
  <div
    class="w-full max-w-screen-xl mx-auto p-4 sm:flex sm:justify-between sm:items-center rounded-lg bg-gray-100 dark:bg-[#1c1e23] opacity-80"
  >
    <span
      class="text-xs sm:text-sm sm:text-center text-zinc-900/90 dark:text-zinc-200/90"
      >Â© {currentYear} Desarrollado por Mauro Quinteros
    </span>
    <ul
      class="flex items-center gap-x-4 md:gap-x-6 mt-3 sm:mt-0 text-xs sm:text-sm font-medium text-zinc-800/90 dark:text-zinc-200/90"
    >
      <li class="flex items-center">
        <a
          id="linkedin"
          href="https://www.linkedin.com/in/mauroquinteros/"
          class="hover:underline"
          aria-label="linkedin"
          target="_blank"
          rel="noopener noreferrer"><LinkedInIcon class="size-4" /></a
        >
      </li>
      <li class="flex items-center">
        <a
          id="email"
          href="mailto:quinterosmauro0599@gmail.com"
          class="hover:underline"
          aria-label="email"
          rel="noopener noreferrer"><ContactIcon class="size-4" /></a
        >
      </li>
    </ul>
  </div>
</footer>
